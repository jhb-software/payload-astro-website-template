---
import type { Breadcrumbs, HeroSection } from 'cms/src/payload-types'
import BreadcrumbsBlock from '../components/Breadcrumbs.astro'
import SectionShell from './SectionShell.astro'

export type Props = HeroSection & { breadcrumbs: Breadcrumbs }

const { title, subtitle, breadcrumbs } = Astro.props
---

<SectionShell class="flex flex-col items-center gap-4 py-16">
  {breadcrumbs && <BreadcrumbsBlock breadcrumbs={breadcrumbs} />}
  <h1 class="text-primary mb-6 max-w-2xl text-center text-4xl font-extrabold text-balance">
    {title}
  </h1>

  <p class="my-2 max-w-2xl text-center text-balance">{subtitle}</p>
</SectionShell>
